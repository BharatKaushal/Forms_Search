<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forms_Search_Engine"
        mc:Ignorable="d"
        Title="Form Search" Height="350" Width="525">
    <Grid ShowGridLines="false" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" >Program Name</Label>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ProgramName" Text="2GMMIL15"></TextBox>
        <Label Grid.Row="1" Grid.Column="0">Form ID</Label>
        <TextBox Grid.Row="1" Grid.Column="1"  x:Name="FormID"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" x:Name="button" Content="Search" HorizontalAlignment="Right"/>
        <!--<DataGrid x:Name="dataGrid" AutoGenerateColumns="True" HorizontalAlignment="Left" Margin="17,3,0,-0.333" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="482" Height="208" Grid.RowSpan="2"/>-->
        <DataGrid x:Name="myDataGrid" Grid.Row="3" Grid.ColumnSpan="2">
        </DataGrid>
    </Grid>
</Window>
